<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

    <pl.droidsonroids.gif.GifImageView
            android:id="@+id/logoApp"
            android:layout_width="347dp"
            android:layout_height="437dp"
            android:src="@drawable/border_gradient_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.565"
            android:layout_marginBottom="488dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:text="@string/tvSignIn"
            android:layout_width="246dp"
            android:layout_height="101dp" android:id="@+id/textView3" android:textColor="@color/colorAccent"
            android:layout_marginBottom="528dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.496"
            android:textSize="41sp" android:fontFamily="@font/rubik_medium"
            android:textAllCaps="false" android:textAlignment="textStart" android:lineSpacingExtra="-4dp"
            android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
            android:text="@string/back_button"
            android:layout_width="150dp"
            android:layout_height="42dp" android:id="@+id/backButton"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@drawable/border_gradient" android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false" android:textSize="16sp" android:fontFamily="@font/rubik_medium"
            android:textStyle="bold" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.436"
            android:clickable="true" android:gravity="center" android:focusable="true"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="366dp"
            android:layout_height="168dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:id="@+id/linearLayout4" app:layout_constraintHorizontal_bias="0.454">

        <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="352dp"
                android:layout_height="162dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.187"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.737">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailText"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingStart="5dp"
                    android:textColorHint="@color/colorDark"
                    app:boxBackgroundMode="outline"
                    app:errorEnabled="true" android:paddingEnd="2dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:hint="@string/emailTextInput"
                        android:inputType="textEmailAddress"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        app:boxBackgroundColor="@color/colorAccent"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordText"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:paddingStart="5dp"
                    android:textColorHint="@color/colorDark"
                    app:boxBackgroundMode="outline"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorAccent" android:paddingEnd="3dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:hint="@string/passwordTextInput"
                        android:inputType="textPassword"
                        android:textColor="@color/colorPrimaryDark"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
            android:text="@string/inicioButton"
            android:layout_width="353dp"
            android:layout_height="51dp" android:id="@+id/iniciarButton"
            android:fontFamily="@font/rubik_medium" android:textColor="@color/colorPrimary"
            android:background="@drawable/button_gradient"
            android:textAllCaps="false" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center" android:textStyle="bold"/>
    <androidx.appcompat.widget.AppCompatButton
            android:text="@string/registrarseButton"
            android:layout_width="296dp"
            android:layout_height="57dp" android:id="@+id/registrarButton"
            android:fontFamily="@font/rubik_medium" android:textColor="@color/colorAccent"
            android:textSize="18sp" style="@style/Widget.AppCompat.Button.Borderless" android:textAllCaps="true"
            android:textStyle="bold" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/iniciarButton" app:layout_constraintVertical_bias="0.714"
            app:layout_constraintHorizontal_bias="0.493"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:layout_marginTop="8dp">

    <androidx.appcompat.widget.AppCompatTextView
            android:text="@string/tvList"
            android:layout_width="186dp"
            android:layout_height="26dp"
            android:id="@+id/tvCal"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/rubik_medium" android:textColor="@color/colorTextButtonOne"
            android:textSize="20sp" android:textAlignment="textEnd"
            android:layout_marginStart="32dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:text="0 - 2100"
            android:layout_width="132dp"
            android:layout_height="26dp"
            android:id="@+id/calFaltante"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/rubik_medium" android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="20sp" android:textAlignment="center"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="40dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="372dp"
            android:layout_height="649dp"
            android:id="@+id/fragmentList"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="70dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="15dp" android:paddingEnd="15dp" app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintVertical_bias="0.534">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:layout_height="@dimen/plan_height"
        tools:layout_width="@dimen/plan_width"
        tools:parentTag="androidx.cardview.widget.CardView"
        tools:layout_gravity="center">

    <RelativeLayout
            android:layout_height="225dp"
            android:layout_width="350dp"
            tools:background="@color/grayPrimary">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/typePlan"
                android:layout_width="332dp"
                android:layout_height="29dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="Type of plan" android:layout_alignParentStart="true" android:layout_marginStart="31dp"
                android:layout_marginTop="9dp" android:layout_alignParentTop="true" android:textSize="18sp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="31dp" android:textAlignment="center"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/calLimit"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="2200 to 2300" android:layout_alignParentStart="true"
                android:layout_marginStart="63dp"
                android:layout_marginTop="-2dp" android:textSize="30sp"
                android:textAlignment="center" android:textStyle="bold" android:layout_below="@+id/typePlan"
                android:layout_alignParentEnd="true" android:layout_marginEnd="63dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="kcal diarias " android:layout_alignParentStart="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="31dp" android:textSize="14sp"
                android:textAlignment="center" android:textStyle="bold" android:layout_below="@+id/typePlan"
                android:layout_alignParentEnd="true" android:layout_marginEnd="93dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/descriptionPlan"
                android:layout_width="326dp"
                android:layout_height="121dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="Description of the planing user" android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="18dp" android:textSize="14sp" android:layout_below="@+id/calLimit"
                android:layout_alignParentEnd="true" android:layout_marginEnd="18dp" android:textAlignment="center"/>

    </RelativeLayout>
</merge>
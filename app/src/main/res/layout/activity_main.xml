<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity" android:background="@color/colorPrimary">


    <androidx.appcompat.widget.AppCompatTextView android:layout_width="269dp"
                                                 android:layout_height="27dp"
                                                 android:textAlignment="center"
                                                 android:textColor="@color/colorAccent"
                                                 android:fontFamily="@font/rubik_medium" android:textSize="16sp"
                                                 android:id="@+id/dateText"
                                                 android:gravity="center"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginTop="16dp"
                                                 app:layout_constraintTop_toBottomOf="@+id/relativeLayout"/>
    <RelativeLayout
            android:layout_width="match_parent" android:layout_height="76dp"
            android:id="@+id/relativeLayout"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:focusable="auto" android:clickable="false"
            android:layout_marginTop="24dp"/>

    <pl.droidsonroids.gif.GifImageView android:layout_width="402dp" android:layout_height="324dp"
                                       android:layout_marginTop="8dp"
                                       app:layout_constraintTop_toBottomOf="@+id/dateText"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toStartOf="parent" android:src="@drawable/back"
                                       android:scaleType="fitXY" android:adjustViewBounds="true"/>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="272dp"
                                                       android:layout_height="280dp"
                                                       app:layout_constraintTop_toBottomOf="@+id/dateText"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       android:layout_marginStart="8dp"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       android:layout_marginEnd="8dp"
                                                       android:layout_marginTop="32dp"
                                                       android:id="@+id/constraintLayout"
                                                       android:background="@drawable/shape_gradient"
                                                       app:layout_constraintHorizontal_bias="0.495">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="302dp"
                android:layout_height="291dp" android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0">

            <androidx.appcompat.widget.AppCompatTextView
                    android:text="@string/tvCal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView8"
                    android:textStyle="bold" android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/colorAccent" android:textSize="16sp" android:textAllCaps="true"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="4dp"/>
            <androidx.appcompat.widget.AppCompatTextView android:layout_width="177dp"
                                                         android:layout_height="17dp"
                                                         android:text="Factor fÃ­sico"
                                                         android:fontFamily="@font/rubik_medium"
                                                         android:textStyle="bold"
                                                         android:textAlignment="center"
                                                         android:id="@+id/appCompatTextView3"
                                                         app:layout_constraintTop_toTopOf="parent"
                                                         android:layout_marginTop="152dp"
                                                         android:textColor="@color/colorTextButtonOne"
                                                         app:layout_constraintStart_toStartOf="parent"
                                                         android:layout_marginStart="60dp"
            />
            <androidx.appcompat.widget.AppCompatTextView android:layout_width="159dp"
                                                         android:layout_height="36dp"
                                                         android:textStyle="bold"
                                                         android:fontFamily="@font/rubik_medium"
                                                         android:textColor="@color/colorAccent" android:textSize="23sp"
                                                         android:id="@+id/factorTv" android:text="@string/sedentario"
                                                         android:textAlignment="center"
                                                         app:layout_constraintTop_toBottomOf="@+id/appCompatTextView3"
                                                         app:layout_constraintEnd_toEndOf="parent"
                                                         android:layout_marginEnd="72dp"
            />
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="180dp"
                    android:layout_height="107dp"
                    android:gravity="center"
                    android:background="@drawable/border_card_user" android:paddingStart="5dp" android:paddingEnd="5dp"
                    android:id="@+id/linearLayout8"
                    android:layout_marginStart="60dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="148dp" app:layout_constraintBottom_toBottomOf="parent"
            >
                <TextView
                        android:layout_width="139dp"
                        android:layout_height="wrap_content" android:id="@+id/calTotalTv"
                        android:layout_weight="0" android:textColor="@color/colorAccent"
                        android:fontFamily="@font/rubik_medium"
                        android:textStyle="bold" android:textSize="43sp" android:textAlignment="center"
                        android:gravity="center"/>
                <TextView
                        android:text="@string/kcal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView15"
                        android:layout_weight="0" android:textColor="@color/colorAccent"
                        android:textAlignment="center" android:textStyle="bold"
                        android:fontFamily="@font/rubik_medium" android:layout_marginTop="-3dp"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="319dp"
                    android:layout_height="67dp"
                    android:id="@+id/linearLayout2"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="28dp" app:layout_constraintHorizontal_bias="0.484">
                <TextView
                        android:text="@string/tvObject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView16"
                        android:layout_weight="0" android:textColor="@color/colorTextButtonOne"
                        android:fontFamily="@font/rubik_medium" android:textSize="14sp"
                        android:layout_marginTop="6dp" android:textAlignment="center"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/objetivoText"
                        android:layout_weight="0" android:textColor="@color/colorAccent"
                        android:fontFamily="@font/rubik_medium" android:textStyle="bold" android:textSize="26sp"
                        android:paddingBottom="7dp" android:textAlignment="center"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="356dp"
            android:layout_height="212dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="center" app:layout_anchorGravity="bottom|center"
            android:id="@+id/constraintLayout2"
            android:layout_marginBottom="92dp" app:layout_constraintHorizontal_bias="0.486">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="341dp"
                android:layout_height="186dp"
                android:id="@+id/linearLayout6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.846" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent">
            <TextView
                    android:text="@string/tvGasto"
                    android:layout_width="318dp"
                    android:id="@+id/textView4"
                    android:textStyle="bold" android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/colorAccent" android:textSize="16sp" android:textAllCaps="true"
                    android:layout_height="wrap_content" android:textAlignment="center"
                    android:layout_gravity="center" android:layout_marginBottom="6dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="346dp"
                    android:layout_height="144dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/infoGastoDiario">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="108dp"
                        android:layout_height="140dp"
                        android:layout_marginEnd="6dp">
                    <TextView
                            android:layout_width="108dp"
                            android:layout_height="108dp" android:id="@+id/grasasTxt"
                            android:background="@drawable/circular_shape" android:textAlignment="center"
                            android:textColor="@color/colorAccent" android:textStyle="bold"
                            android:paddingTop="39dp"
                            android:textSize="23sp" android:fontFamily="@font/rubik_medium"/>
                    <TextView
                            android:text="@string/grasas"
                            android:layout_width="match_parent"
                            android:layout_height="31dp" android:textColor="@color/colorTextButtonOne"
                            android:textSize="17sp" android:fontFamily="@font/rubik_medium" android:textStyle="bold"
                            android:textAlignment="center"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="108dp"
                        android:layout_height="139dp">
                    <TextView
                            android:layout_width="108dp"
                            android:layout_height="108dp" android:id="@+id/proteinTxt"
                            android:background="@drawable/circular_shape" android:textAlignment="center"
                            android:textColor="@color/colorAccent" android:paddingTop="39dp"
                            android:textSize="23sp" android:fontFamily="@font/rubik_medium" android:textStyle="bold"/>
                    <TextView
                            android:text="@string/proteinas"
                            android:layout_width="match_parent"
                            android:layout_height="31dp" android:textColor="@color/colorTextButtonOne"
                            android:textSize="17sp" android:fontFamily="@font/rubik_medium" android:textStyle="bold"
                            android:textAlignment="center" android:id="@+id/textView9"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="118dp"
                        android:layout_height="140dp">
                    <TextView
                            android:layout_width="108dp"
                            android:layout_height="108dp" android:id="@+id/chTxt"
                            android:background="@drawable/circular_shape" android:textAlignment="center"
                            android:textColor="@color/colorAccent" android:textStyle="bold"
                            android:paddingTop="39dp"
                            android:textSize="23sp" android:layout_marginStart="6dp"
                            android:fontFamily="@font/rubik_medium"/>
                    <TextView
                            android:text="@string/ch"
                            android:layout_width="match_parent"
                            android:layout_height="31dp" android:textColor="@color/colorTextButtonOne"
                            android:textSize="14sp" android:fontFamily="@font/rubik_medium" android:textStyle="bold"
                            android:textAlignment="center" android:id="@+id/textView10" android:layout_marginTop="3dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton android:layout_width="291dp"
                                               android:layout_height="60dp"
                                               app:layout_constraintStart_toStartOf="parent"
                                               app:layout_constraintEnd_toEndOf="parent"
                                               android:layout_marginEnd="8dp" android:id="@+id/trainingButton"
                                               android:background="@drawable/border_gradient_main"
                                               android:text="@string/trainingButton"
                                               android:fontFamily="@font/rubik_medium" android:textSize="16sp"
                                               android:textStyle="bold" android:textColor="@color/colorAccent"
                                               app:layout_constraintHorizontal_bias="0.093"
                                               android:layout_marginStart="8dp"
                                               app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                                               android:layout_marginTop="16dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp"
            android:id="@+id/ftbInfo"
            android:src="@drawable/ic_dehaze_black_24dp"
            app:fabSize="normal"
            app:elevation="1dp"
            app:borderWidth="0dp"
            app:pressedTranslationZ="1dp" app:useCompatPadding="false" app:fabCustomSize="60dp"
            app:maxImageSize="36dp" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>